<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:lineSpacingExtra">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="Label" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="fontFamily">@font/gotham_medium</item>
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:lineSpacingExtra">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">bottom</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="DialogDescription" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Description" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Textbox" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="Textbox.Note" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="ActionButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">136dp</item>
        <item name="android:background">@drawable/drawable_button_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="android:paddingRight">@dimen/margin_16</item>
        <item name="fontFamily">@font/font_gotham_bold</item>

    </style>


    <style name="SectionHeaderButton" parent="ActionButton">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">96dp</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="android:paddingRight">@dimen/margin_16</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogPositiveButton">
        <item name="background">@drawable/drawable_button_state</item>
        <item name="android:background">@drawable/drawable_button_state</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/font_gotham_medium</item>
        <item name="fontFamily">@font/font_gotham_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="lineHeight">24dp</item>
        <item name="lineSpacing">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogNegativeButton">
        <item name="android:background">@color/transparent</item>
        <item name="background">@color/transparent</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/font_gotham_medium</item>
        <item name="fontFamily">@font/font_gotham_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="lineHeight">24dp</item>
        <item name="lineSpacing">0dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_28"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="#858585">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_15"
        android:paddingEnd="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            style="@style/Label"
            android:layout_marginBottom="@dimen/margin_15"
            android:text="Filters"/>

        <TextView
            android:padding="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Any make"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@drawable/state_textbox_empty"
            android:gravity="center_vertical"
            android:id="@+id/btn_maker"
            />

        <TextView
            android:padding="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_width="match_parent"
            android:background="@drawable/state_textbox_empty"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/btn_model"
            android:text="Any model"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>